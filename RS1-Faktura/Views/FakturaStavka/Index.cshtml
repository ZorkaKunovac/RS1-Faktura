@using RS1_Faktura.ViewModels

@{
    Layout = null;
}
@model List<StavkeFakturePrikaz>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>NazivProizvoda</th>
            <th>Cijena</th>
            <th>Kolicina</th>
            <th>Procenat</th>
            <th>Iznos</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (StavkeFakturePrikaz stavke in Model)
        {
        <tr>
            <td>@stavke.NazivProizvoda</td>
            <td>@stavke.Cijena</td>
            <td>@stavke.Kolicina</td>
            <td>@stavke.Procenat</td>
            <td>@stavke.Iznos</td>
            <td>
                <a href="/FakturaStavka/Obrisi?StavkeFaktureId=@stavke.StavkeFaktureId">Obrisi</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a href="/FakturaStavka/Dodaj">Dodaj</a>